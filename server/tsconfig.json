{
  "include": ["env.d.ts", "src/**/*"],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../out",
    "allowJs": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "lib": ["es2015"]
}
